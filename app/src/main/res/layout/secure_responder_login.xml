<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF101622">

    <!-- Frame: Secure Responder Login (390x922) -->

    <!-- FRAME: iOS Frame Emulation (Phone Container) -->
    <LinearLayout
        android:id="@+id/ios_frame_emulation__phone_container_"
        android:orientation="vertical"
        android:layout_width="358dp"
        android:layout_height="867dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_rounded">

        <!-- RECTANGLE: Subtle Background Pattern -->
        <LinearLayout
            android:id="@+id/subtle_background_pattern"
        android:layout_width="342dp"
        android:layout_height="851dp" />

        <!-- FRAME: Main Content Section -->
        <LinearLayout
            android:id="@+id/main_content_section"
            android:orientation="vertical"
        android:layout_width="342dp"
        android:layout_height="778dp"
            android:paddingLeft="32dp"
            android:paddingTop="40dp"
            android:paddingRight="32dp"
            android:paddingBottom="40dp">

            <!-- FRAME: Branding Header:margin -->
            <LinearLayout
                android:id="@+id/branding_header_margin"
                android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="200dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="48dp">

                <!-- FRAME: Branding Header -->
                <LinearLayout
                    android:id="@+id/branding_header"
                    android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="152dp">

                    <!-- FRAME: Margin -->
                    <LinearLayout
                        android:id="@+id/margin"
                        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="96dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="16dp">

                        <!-- FRAME: Overlay+Border -->
                        <LinearLayout
                            android:id="@+id/overlay_border"
                            android:orientation="horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
                            android:background="@drawable/bg_rounded">

                            <!-- FRAME: Container -->
                            <LinearLayout
                                android:id="@+id/container"
                                android:orientation="vertical"
        android:layout_width="36dp"
        android:layout_height="44dp">

                                <!-- VECTOR: Icon -->
                                <ImageView
                                    android:id="@+id/icon"
                                    android:src="@drawable/ic_icon"
                                    android:scaleType="fitXY"
        android:layout_width="36dp"
        android:layout_height="44dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- FRAME: Heading 1 -->
                    <LinearLayout
                        android:id="@+id/heading_1"
                        android:orientation="vertical"
        android:layout_width="161dp"
        android:layout_height="32dp">

                        <!-- TEXT: Text -->
                        <TextView
                            android:id="@+id/text"
                            android:text="Secure Access"
                            android:textSize="24sp"
                            android:textColor="#FFFFFFFF"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:fontFamily="Public Sans"
        android:layout_width="161dp"
        android:layout_height="32dp" />
                    </LinearLayout>

                    <!-- FRAME: Margin -->
                    <LinearLayout
                        android:id="@+id/margin"
                        android:orientation="vertical"
        android:layout_width="184dp"
        android:layout_height="24dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="4dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp">

                        <!-- TEXT: Text -->
                        <TextView
                            android:id="@+id/text"
                            android:text="Incident Management Portal"
                            android:textSize="14sp"
                            android:textColor="#FF94A3B8"
                            android:gravity="start"
                            android:fontFamily="Public Sans"
        android:layout_width="184dp"
        android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- FRAME: Login Form:margin -->
            <LinearLayout
                android:id="@+id/login_form_margin"
                android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="429dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="16dp">

                <!-- FRAME: Login Form -->
                <LinearLayout
                    android:id="@+id/login_form"
                    android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="413dp">

                    <!-- FRAME: Role Selector (Segmented Toggle) -->
                    <LinearLayout
                        android:id="@+id/role_selector__segmented_toggle_"
                        android:orientation="horizontal"
        android:layout_width="278dp"
        android:layout_height="48dp"
                        android:background="@drawable/bg_rounded"
                        android:paddingLeft="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="4dp">

                        <!-- FRAME: Button -->
                        <LinearLayout
                            android:id="@+id/button"
                            android:orientation="horizontal"
        android:layout_width="270dp"
        android:layout_height="40dp"
                            android:background="@drawable/bg_rounded"
                            android:paddingLeft="0dp"
                            android:paddingTop="10dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="10dp">

                            <!-- FRAME: Container -->
                            <LinearLayout
                                android:id="@+id/container"
                                android:orientation="vertical"
        android:layout_width="12dp"
        android:layout_height="15dp">

                                <!-- VECTOR: Icon -->
                                <ImageView
                                    android:id="@+id/icon"
                                    android:src="@drawable/ic_icon"
                                    android:scaleType="fitXY"
        android:layout_width="12dp"
        android:layout_height="15dp" />
                            </LinearLayout>

                            <!-- TEXT: Text -->
                            <TextView
                                android:id="@+id/text"
                                android:text="FIRE"
                                android:textSize="14sp"
                                android:textColor="#FF94A3B8"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="Public Sans"
        android:layout_width="31dp"
        android:layout_height="20dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- FRAME: Input Groups -->
                    <LinearLayout
                        android:id="@+id/input_groups"
                        android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="173dp">

                        <!-- FRAME: Container -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/container"
        android:layout_width="278dp"
        android:layout_height="79dp">

                            <!-- TEXT: Label → Badge ID or Email -->
                            <TextView
                                android:id="@+id/label___badge_id_or_email"
                                android:text="Badge ID or Email"
                                android:textSize="11sp"
                                android:textColor="#FF94A3B8"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:fontFamily="Public Sans"
        android:layout_width="118dp"
        android:layout_height="17dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

                            <!-- FRAME: Container -->
                            <LinearLayout
                                android:id="@+id/container"
                                android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                                <!-- FRAME: Input -->
                                <LinearLayout
                                    android:id="@+id/input"
                                    android:orientation="horizontal"
        android:layout_width="278dp"
        android:layout_height="56dp"
                                    android:background="@drawable/bg_rounded"
                                    android:paddingLeft="48dp"
                                    android:paddingTop="19dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="19dp">

                                    <!-- FRAME: Container -->
                                    <LinearLayout
                                        android:id="@+id/container"
                                        android:orientation="vertical"
        android:layout_width="212dp"
        android:layout_height="16dp">

                                        <!-- TEXT: Enter credentials -->
                                        <TextView
                                            android:id="@+id/enter_credentials"
                                            android:text="Enter credentials"
                                            android:textSize="14sp"
                                            android:textColor="#FF6B7280"
                                            android:gravity="start"
                                            android:fontFamily="Public Sans"
        android:layout_width="212dp"
        android:layout_height="16dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- FRAME: Container -->
                                <LinearLayout
                                    android:id="@+id/container"
                                    android:orientation="vertical"
        android:layout_width="17dp"
        android:layout_height="20dp">

                                    <!-- VECTOR: Icon -->
                                    <ImageView
                                        android:id="@+id/icon"
                                        android:src="@drawable/ic_icon"
                                        android:scaleType="fitXY"
        android:layout_width="17dp"
        android:layout_height="17dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- FRAME: Container -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/container"
        android:layout_width="278dp"
        android:layout_height="79dp">

                            <!-- TEXT: Label → Secure Password -->
                            <TextView
                                android:id="@+id/label___secure_password"
                                android:text="Secure Password"
                                android:textSize="11sp"
                                android:textColor="#FF94A3B8"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:fontFamily="Public Sans"
        android:layout_width="119dp"
        android:layout_height="17dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

                            <!-- FRAME: Container -->
                            <LinearLayout
                                android:id="@+id/container"
                                android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                                <!-- FRAME: Input -->
                                <LinearLayout
                                    android:id="@+id/input"
                                    android:orientation="horizontal"
        android:layout_width="278dp"
        android:layout_height="56dp"
                                    android:background="@drawable/bg_rounded"
                                    android:paddingLeft="48dp"
                                    android:paddingTop="19dp"
                                    android:paddingRight="48dp"
                                    android:paddingBottom="19dp">

                                    <!-- FRAME: Container -->
                                    <LinearLayout
                                        android:id="@+id/container"
                                        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="16dp">

                                        <!-- TEXT: •••••••• -->
                                        <TextView
                                            android:id="@+id/________"
                                            android:text="••••••••"
                                            android:textSize="14sp"
                                            android:textColor="#FF6B7280"
                                            android:gravity="start"
                                            android:fontFamily="Public Sans"
        android:layout_width="180dp"
        android:layout_height="16dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- FRAME: Container -->
                                <LinearLayout
                                    android:id="@+id/container"
                                    android:orientation="vertical"
        android:layout_width="13dp"
        android:layout_height="20dp">

                                    <!-- VECTOR: Icon -->
                                    <ImageView
                                        android:id="@+id/icon"
                                        android:src="@drawable/ic_icon"
                                        android:scaleType="fitXY"
        android:layout_width="13dp"
        android:layout_height="18dp" />
                                </LinearLayout>

                                <!-- FRAME: Button -->
                                <LinearLayout
                                    android:id="@+id/button"
                                    android:orientation="vertical"
        android:layout_width="18dp"
        android:layout_height="16dp">

                                    <!-- FRAME: Container -->
                                    <LinearLayout
                                        android:id="@+id/container"
                                        android:orientation="horizontal"
        android:layout_width="18dp"
        android:layout_height="16dp">

                                        <!-- VECTOR: Icon -->
                                        <ImageView
                                            android:id="@+id/icon"
                                            android:src="@drawable/ic_icon"
                                            android:scaleType="fitXY"
        android:layout_width="18dp"
        android:layout_height="16dp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <!-- FRAME: Login Button -->
                    <LinearLayout
                        android:id="@+id/login_button"
                        android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="144dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="16dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp">

                        <!-- FRAME: Button -->
                        <LinearLayout
                            android:id="@+id/button"
                            android:orientation="horizontal"
        android:layout_width="278dp"
        android:layout_height="56dp"
                            android:background="@drawable/bg_rounded"
                            android:paddingLeft="0dp"
                            android:paddingTop="15.5dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="16.5dp">

                            <!-- RECTANGLE: Button:shadow -->
                            <LinearLayout
                                android:id="@+id/button_shadow"
        android:layout_width="278dp"
        android:layout_height="56dp"
                                android:background="@drawable/bg_rounded" />

                            <!-- FRAME: Container -->
                            <LinearLayout
                                android:id="@+id/container"
                                android:orientation="vertical"
        android:layout_width="15dp"
        android:layout_height="18dp">

                                <!-- VECTOR: Icon -->
                                <ImageView
                                    android:id="@+id/icon"
                                    android:src="@drawable/ic_icon"
                                    android:scaleType="fitXY"
        android:layout_width="15dp"
        android:layout_height="18dp" />
                            </LinearLayout>

                            <!-- TEXT: Text -->
                            <TextView
                                android:id="@+id/text"
                                android:text="SECURE LOGIN"
                                android:textSize="16sp"
                                android:textColor="#FFFFFFFF"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="Public Sans"
        android:layout_width="120dp"
        android:layout_height="24dp" />
                        </LinearLayout>

                        <!-- FRAME: Button - Biometric Access -->
                        <LinearLayout
                            android:id="@+id/button___biometric_access"
                            android:orientation="horizontal"
        android:layout_width="278dp"
        android:layout_height="56dp"
                            android:background="@drawable/bg_rounded">

                            <!-- FRAME: Container -->
                            <LinearLayout
                                android:id="@+id/container"
                                android:orientation="vertical"
        android:layout_width="18dp"
        android:layout_height="20dp">

                                <!-- VECTOR: Icon -->
                                <ImageView
                                    android:id="@+id/icon"
                                    android:src="@drawable/ic_icon"
                                    android:scaleType="fitXY"
        android:layout_width="18dp"
        android:layout_height="20dp" />
                            </LinearLayout>

                            <!-- TEXT: Text -->
                            <TextView
                                android:id="@+id/text"
                                android:text="Biometric Quick Entry"
                                android:textSize="16sp"
                                android:textColor="#FFCBD5E1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="Public Sans"
        android:layout_width="165dp"
        android:layout_height="24dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- FRAME: Forgot Password & Links:margin -->
            <LinearLayout
                android:id="@+id/forgot_password___links_margin"
                android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="69dp"
                android:paddingLeft="0dp"
                android:paddingTop="32dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp">

                <!-- FRAME: Forgot Password & Links -->
                <LinearLayout
                    android:id="@+id/forgot_password___links"
                    android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="37dp">

                    <!-- FRAME: Link -->
                    <LinearLayout
                        android:id="@+id/link"
                        android:orientation="vertical"
        android:layout_width="164dp"
        android:layout_height="20dp">

                        <!-- TEXT: Text -->
                        <TextView
                            android:id="@+id/text"
                            android:text="Forgot Badge Password?"
                            android:textSize="14sp"
                            android:textColor="#FF135BEC"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:fontFamily="Public Sans"
        android:layout_width="164dp"
        android:layout_height="20dp" />
                    </LinearLayout>

                    <!-- RECTANGLE: Horizontal Divider -->
                    <LinearLayout
                        android:id="@+id/horizontal_divider"
        android:layout_width="48dp"
        android:layout_height="1dp"
                        android:background="#FF1E293B" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- FRAME: Footer / Security Note -->
        <LinearLayout
            android:id="@+id/footer___security_note"
            android:orientation="vertical"
        android:layout_width="342dp"
        android:layout_height="89dp"
            android:paddingLeft="32dp"
            android:paddingTop="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="40dp">

            <!-- FRAME: Container -->
            <LinearLayout
                android:id="@+id/container"
                android:orientation="vertical"
        android:layout_width="278dp"
        android:layout_height="49dp">

                <!-- TEXT: Text -->
                <TextView
                    android:id="@+id/text"
                    android:text="Authorized Personnel Only. All access is encrypted
and logged in real-time. Unauthorized attempts will
be prosecuted."
                    android:textSize="10sp"
                    android:textColor="#FF475569"
                    android:gravity="center"
                    android:fontFamily="Public Sans"
        android:layout_width="270dp"
        android:layout_height="49dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>