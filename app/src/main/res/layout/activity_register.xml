<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <ImageView
            android:id="@+id/imgShield"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgShield" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Register Fire Personnel"
            android:textColor="@color/text_label"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <!-- First Name -->
        <TextView
            android:id="@+id/lblFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="FIRST NAME"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSubtitle" />

        <LinearLayout
            android:id="@+id/containerFirstName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblFirstName">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person" />

            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Enter first name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name is required"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerFirstName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Middle Name -->
        <TextView
            android:id="@+id/lblMiddleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="MIDDLE NAME (OPTIONAL)"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errFirstName" />

        <LinearLayout
            android:id="@+id/containerMiddleName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblMiddleName">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person" />

            <EditText
                android:id="@+id/edtMiddleName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Enter middle name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Last Name -->
        <TextView
            android:id="@+id/lblLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="LAST NAME"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerMiddleName" />

        <LinearLayout
            android:id="@+id/containerLastName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblLastName">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person" />

            <EditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Enter last name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name is required"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerLastName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Extension -->
        <TextView
            android:id="@+id/lblExtension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EXTENSION"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errLastName" />

        <LinearLayout
            android:id="@+id/containerExtension"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblExtension">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person" />

            <EditText
                android:id="@+id/edtExtension"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Enter extension (e.g., Jr.)"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errExtension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extension is required"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerExtension"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Contact Number -->
        <TextView
            android:id="@+id/lblContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CONTACT NUMBER"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errExtension" />

        <LinearLayout
            android:id="@+id/containerContact"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblContact">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_call"
                app:tint="@color/text_label" />

            <EditText
                android:id="@+id/edtContactNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Enter contact number"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact number is required"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerContact"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Email -->
        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EMAIL ADDRESS"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errContact" />

        <LinearLayout
            android:id="@+id/containerEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblEmail">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person"
                app:tint="@color/text_label" />

            <EditText
                android:id="@+id/edtRegisterEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid email is required"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerEmail"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Password -->
        <TextView
            android:id="@+id/lblPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PASSWORD"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errEmail" />

        <LinearLayout
            android:id="@+id/containerPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblPassword">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/edtRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="........"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password (min 8 characters)"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Confirm Password -->
        <TextView
            android:id="@+id/lblConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CONFIRM PASSWORD"
            android:textColor="@color/text_label"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errPassword" />

        <LinearLayout
            android:id="@+id/containerConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblConfirmPassword">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="........"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passwords do not match"
            android:textColor="@color/fire_red"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/containerConfirmPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rounded_button"
            android:text="COMPLETE REGISTRATION"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/errConfirmPassword" />

        <ProgressBar
            android:id="@+id/progressRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRegister" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
